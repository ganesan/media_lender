<html>
  <head>
    <title>Movie Lender</title>
    <%= stylesheet_link_tag 'application' %>
    <%= use_theme('slicehost') %>
  </head>
  <body>
  
    <div id='root'>
      <div id='header'>

        <div id='logo'>
          <%= link_to image_tag("logo.png", :border => 0, :alt => "Media Lender"), root_path %>
        </div>
        
        <ul id='navigation'>
          
          <% if current_user %>
            <li><%= link_to "My Movies", root_path %></li>
            <li><%= link_to "Edit Profile", edit_user_path(:current) %></li>
            <li><%= link_to "Log out <span class=\"small\">(#{current_user.username})</span>", logout_path %></li>
            
          <% else %>
            <li><%= link_to "Home", welcome_path %></li>
            <li><%= link_to "Login", login_path %></li>
            <li><%= link_to "Register", new_user_path %></li>

          <% end %>
        </ul>
        <div class='clear'></div>
      </div>

      <div id='contents'>
        <div id='page_title_container'>
          <h1 class='title'><%= yield(:title) || "Untitled" %></h1>
          <% if !yield(:subtitle).blank? %>
            <h3 class='subtitle'><%= yield(:subtitle) || "Description goes here" %></h3>
          <% end %>
        </div>
        
        <%= display_flash(flash) %>
        
        <%= yield %>
        
        <div id='root_footer'></div>

      </div>
      
      <div id='footer'>
        &copy <%= Time.now.year %> Me. All Rights Reserved.
      </div>
      
    </div>
  </body>
</html>
